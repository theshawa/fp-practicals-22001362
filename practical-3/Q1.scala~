object Q1 extends App {
  def reverse_string(str:String, i:Int=0):String = i match {
    case i if i==str.length => str
    case _ => {
      val part_1 = str.substring(0,i);
      var part_2 = str.substring(i);
      val last = str.last;
      part_2 = part_2.dropRight(1);
      reverse_string(s"${part_1}${last}${part_2}",i+1);
    }
  }

  val str = "Hello World";
  printf("reverse of %s is %s\n", str, reverse_string(str));
}
